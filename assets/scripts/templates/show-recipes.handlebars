
{{#each recipes as |recipe|}}


<div class="card">
  <div class="card-block">
    <h4 class="card-title" id="{{recipe.id}}">{{recipe.id}} {{recipe.name}}</h4>
    <h3 class="card-link">{{recipe.link}}</h3>
  </div>
  <ul class="list-group list-group-flush">
    <li>{{recipe.ingredients}}</li>
  </ul>
</div>
{{/each}}
