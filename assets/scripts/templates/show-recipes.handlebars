
{{#each recipes as |recipe|}}

<div class="card">
  <div class="card-block">
    <h3 class="card-title" id="{{recipe.id}}">{{recipe.name}}</h3>
    <h4 class="card-id">Recipe ID #{{recipe.id}}</h4>
    <h4 class="card-link">{{recipe.link}}</h4>
  </div>
  <ul class="list-group list-group-flush">
    <li>{{recipe.ingredients}}</li>
  </ul>
</div>
{{/each}}
